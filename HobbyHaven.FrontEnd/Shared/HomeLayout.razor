@inherits LayoutComponentBase

<MudThemeProvider Theme="newFont" @bind-IsDarkMode="@darkModeToggle" @ref="@MudThemeProvider"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Warning">
        <AuthorizeView>
            <Authorized>
                <MudIconButton Icon="@menuIcon" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => menuToggle())" />
            </Authorized>
        </AuthorizeView>
        <MudText Style="color:floralwhite;width:240px;height:60px;font-size:30px;font-weight:bold;" Align="Align.Center" > HOBBY HAVEN </MudText>
        <MudSpacer />
        <AccessControl />
    </MudAppBar>
    <MudDrawer @bind-Open="@openNavMenu">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    NavMenu _navMenu;
    bool darkModeToggle;
    bool openNavMenu = false;
    string menuIcon = Icons.Material.Filled.Menu;
    MudThemeProvider MudThemeProvider;
    private void menuToggle()
    {
        openNavMenu = !openNavMenu;
        if (openNavMenu) menuIcon = Icons.Material.Filled.MenuOpen;
        else menuIcon = Icons.Material.Filled.Menu;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            darkModeToggle = await MudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }
    MudTheme newFont = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Segoe UI" }
                }
            }
        };
}